{
    "module": "telemetry",
    "version": "2.0.0",
    "standards": {
        "data_types": [
            "STRING",
            "NUMBER",
            "BOOLEAN",
            "JSON",
            "PERCENTAGE"
        ],
        "validation": {
            "expression": {
                "max_length": 1000,
                "allowed_operators": [
                    "==",
                    "!=",
                    ">",
                    "<",
                    ">=",
                    "<=",
                    "AND",
                    "OR",
                    "NOT",
                    "IS",
                    "TRUE",
                    "FALSE",
                    "NULL"
                ],
                "reserved_keywords": [
                    "status",
                    "count",
                    "value",
                    "latest"
                ]
            }
        }
    },
    "linking_logic": {
        "task_types": {
            "product_task": {
                "source_table": "ProductTelemetry",
                "junction_table": "ProductTaskTelemetry"
            },
            "solution_task": {
                "source_table": "SolutionTelemetry",
                "junction_table": "SolutionTaskTelemetry"
            }
        }
    },
    "status_mapping": {
        "expression_success": "COMPLETED",
        "has_partial_data": "IN_PROGRESS",
        "no_data": "NOT_STARTED",
        "overrides": {
            "MANUAL": {
                "preserve_if_not_started": false,
                "block_auto_update": true
            }
        }
    }
}